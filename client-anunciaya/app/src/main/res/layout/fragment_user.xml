<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoApp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:backgroundTint="@color/Rojo1"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="13dp"
                        android:backgroundTint="@color/Rojo3"
                        >
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="120dp"
                            android:layout_height="80dp"
                            android:src="@drawable/user_logo"
                            android:id="@+id/FotoPerfil"/>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Nombre_Usuario"
                            android:textSize="23sp"
                            android:textColor="@color/white"
                            android:id="@+id/userNombreUsuario"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Correo_Usuario"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:id="@+id/userCorreoUsuario"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Telefono_Usuario"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:id="@+id/userTelefonoUsuario"/>
                        <ImageView
                            android:layout_marginTop="10dp"
                            android:id="@+id/btLoggout"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/loggout"
                            />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        android:backgroundTint="@color/Rojo2"
                        android:id="@+id/btUserAjustes"
                        >
                        <TextView
                            android:gravity="center"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="2dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/ajustes"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            />
                        <androidx.cardview.widget.CardView
                            android:layout_width="33dp"
                            android:layout_height="32dp"
                            android:backgroundTint="@color/Rojo3"
                            app:cardCornerRadius="5dp"
                            >
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginHorizontal="2dp"
                                android:layout_marginVertical="2dp"
                                android:src="@drawable/ajustes"
                                >

                            </ImageView>
                        </androidx.cardview.widget.CardView>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        android:backgroundTint="@color/Rojo2"
                        android:id="@+id/btUserPedidos"
                        >
                        <TextView
                            android:gravity="center"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="2dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/misPedidos"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            />
                        <androidx.cardview.widget.CardView
                            android:layout_width="33dp"
                            android:layout_height="30dp"
                            android:backgroundTint="@color/Rojo3"
                            app:cardCornerRadius="5dp"
                            >
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginHorizontal="2dp"
                                android:src="@drawable/caja"
                                >

                            </ImageView>
                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        android:backgroundTint="@color/Rojo2"
                        android:id="@+id/btUserEnvios"
                        >
                        <TextView
                            android:gravity="center"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="2dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/misEnvios"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            />
                        <androidx.cardview.widget.CardView
                            android:layout_width="33dp"
                            android:layout_height="30dp"
                            android:backgroundTint="@color/Rojo3"
                            app:cardCornerRadius="5dp"
                            >
                            <androidx.cardview.widget.CardView
                                android:layout_width="33dp"
                                android:layout_height="30dp"
                                android:backgroundTint="@color/Rojo3"
                                app:cardCornerRadius="5dp"
                                >
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginHorizontal="2dp"
                                    android:src="@drawable/caja"
                                    >

                                </ImageView>
                            </androidx.cardview.widget.CardView>
                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Rojo3"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/Rojo2"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="100dp"
            app:cardCornerRadius="20dp">
            <TextView
                android:layout_marginVertical="3dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/anunPublicados"
                android:textSize="20sp"
                android:textColor="@color/white"/>
        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAnunciosUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            tools:ignore="NotSibling" />
    </LinearLayout>



</ScrollView>
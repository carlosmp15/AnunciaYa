<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoApp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <androidx.cardview.widget.CardView
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:backgroundTint="@color/Rojo3"
            android:elevation="@dimen/cardview_compat_inset_shadow"
            app:cardCornerRadius="10dp"
            >
            <TextView
                android:textColor="@color/white"
                android:paddingVertical= "2dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/addAnuncio"
                android:textSize="20sp"
                />


        </androidx.cardview.widget.CardView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/fondoApp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteY="0dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:backgroundTint="@color/Rojo1"
                        app:cardCornerRadius="13dp"
                        android:layout_marginTop="20dp"
                        >
                        <LinearLayout
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            tools:layout_editor_absoluteY="0dp">
                            <TextView
                                android:layout_width="330dp"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="@string/titulo_"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                />
                            <androidx.cardview.widget.CardView
                                android:layout_width="340dp"
                                android:layout_height="40dp"
                                android:backgroundTint="@color/Rojo2"
                                android:elevation="30dp"
                                app:cardCornerRadius="12dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <EditText
                                        android:id="@+id/etTitutloMod"
                                        android:layout_width="280dp"
                                        android:layout_height="40dp"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="10dp"
                                        android:background="@null"
                                        android:textColor="@color/white"
                                        android:hint="@string/titulo"
                                        android:textColorHint="@color/white"
                                        android:singleLine="true" />

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_toEndOf="@id/etTitutloMod"
                                        app:cardCornerRadius="10dp"
                                        app:cardElevation="6dp"
                                        app:cardBackgroundColor="@color/Rojo3">

                                        <ImageView
                                            android:layout_width="40dp"
                                            android:layout_height="30dp"
                                            android:layout_margin="5dp"
                                            android:src="@drawable/anuncio"
                                            />
                                    </androidx.cardview.widget.CardView>
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:layout_marginTop="20dp"
                                android:layout_width="330dp"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:textColor="@color/white"
                                android:text="@string/descripcion_"
                                android:textSize="20sp"/>
                            <androidx.cardview.widget.CardView
                                android:layout_width="340dp"
                                android:layout_height="120dp"
                                android:backgroundTint="@color/Rojo2"
                                android:elevation="30dp"
                                app:cardCornerRadius="12dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <EditText
                                        android:id="@+id/etDescripMod"
                                        android:layout_width="match_parent"
                                        android:layout_height="120dp"
                                        android:maxLength="495"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="10dp"
                                        android:background="@null"
                                        android:textColor="@color/white" />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:layout_marginTop="20dp"
                                android:layout_width="330dp"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="@string/precio_"
                                android:textColor="@color/white"
                                android:textSize="20sp"/>
                            <androidx.cardview.widget.CardView
                                android:layout_width="340dp"
                                android:layout_height="40dp"
                                android:backgroundTint="@color/Rojo2"
                                android:elevation="30dp"
                                app:cardCornerRadius="12dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <EditText
                                        android:id="@+id/etPrecioMod"
                                        android:layout_width="280dp"
                                        android:inputType="numberDecimal"
                                        android:layout_height="40dp"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="10dp"
                                        android:background="@null"
                                        android:textColorHint="@color/white"
                                        android:textColor="@color/white"
                                        android:hint="@string/precio"
                                        android:singleLine="true" />

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_toEndOf="@id/etPrecioMod"
                                        app:cardCornerRadius="10dp"
                                        app:cardElevation="6dp"
                                        app:cardBackgroundColor="@color/Rojo3">

                                        <ImageView
                                            android:layout_width="40dp"
                                            android:layout_height="30dp"
                                            android:layout_margin="5dp"
                                            android:src="@drawable/euro"
                                            />
                                    </androidx.cardview.widget.CardView>
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:layout_marginRight="30dp">
                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/Rojo1"
                                    android:elevation="30dp"
                                    app:cardCornerRadius="8dp">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:text="@string/estado_"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:text="@string/categoria_"
                                    android:layout_marginStart="60dp"
                                    android:textSize="20sp"/>

                            </LinearLayout>


                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/Rojo2"
                                    android:elevation="30dp"
                                    app:cardCornerRadius="8dp">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <Spinner
                                            android:id="@+id/spEstadoMod"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"

                                            >

                                        </Spinner>

                                    </RelativeLayout>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/Rojo2"
                                    android:elevation="30dp"
                                    app:cardCornerRadius="8dp"
                                    android:layout_marginStart="30dp"
                                    >

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <Spinner
                                            android:id="@+id/spCategoriaMod"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            >

                                        </Spinner>

                                    </RelativeLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="@string/ubicacion_"
                        android:textSize="20sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_marginEnd="30dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/Rojo1"
                            android:elevation="30dp"
                            app:cardCornerRadius="8dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <AutoCompleteTextView
                                    android:textColor="@color/white"
                                    android:id="@+id/actvUbiMod"
                                    android:layout_width="325dp"
                                    android:layout_height="wrap_content">
                                </AutoCompleteTextView>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="@string/fotos_"
                        android:textSize="20sp"/>
                    <androidx.cardview.widget.CardView
                        android:layout_margin="10dp"
                        android:layout_width="340dp"
                        android:layout_height="220dp"
                        android:backgroundTint="@color/Rojo1"
                        app:cardCornerRadius="20dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:orientation="vertical"
                            >
                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:id="@+id/recyclerEditar"
                                app:layoutManager="com.google.android.material.carousel.CarouselLayoutManager"/>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">
                                <Button
                                    android:id="@+id/btaddFoto"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/addFoto"
                                    android:layout_marginEnd="3dp"
                                    android:backgroundTint="@color/Rojo2"/>
                                <Button
                                    android:id="@+id/btremoveFoto"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/delFoto"
                                    android:layout_marginStart="3dp"
                                    android:backgroundTint="@color/Rojo2"/>
                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">
                        <Button
                            android:id="@+id/btModAnuncio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/modAnuncio"
                            android:textStyle="bold"
                            android:backgroundTint="@color/Rojo2"/>

                    </LinearLayout>
                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</ScrollView>
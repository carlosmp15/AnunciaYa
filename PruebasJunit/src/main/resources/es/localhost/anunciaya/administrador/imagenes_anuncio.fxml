<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<DialogPane style="-fx-background-color: #ffc9c9;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.localhost.anunciaya.administrador.ViewsControllers.CarrouselController">
    <content>
        <BorderPane prefWidth="420.0">
            <center>
                <ImageView fx:id="imageView" fitHeight="300" fitWidth="400" preserveRatio="true" />
            </center>
            <bottom>
                <HBox alignment="center" spacing="10" style="-fx-padding: 10;">
                    <Button onAction="#showPreviousImage" style="-fx-background-color: #b3395a; -fx-background-radius: 10;" text="Anterior" textFill="WHITE">
                        <font>
                            <Font name="Arial Bold" size="14.0" />
                        </font>
                    </Button>
                    <Button onAction="#showNextImage" style="-fx-background-color: #b3395a; -fx-background-radius: 10;" text="Siguiente" textFill="WHITE">
                        <font>
                            <Font name="Arial Bold" size="14.0" />
                        </font>
                    </Button>
                </HBox>
            </bottom>
        </BorderPane>
    </content>
</DialogPane>
